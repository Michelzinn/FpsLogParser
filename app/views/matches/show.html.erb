<div class="min-h-screen p-4">
  <div class="max-w-6xl mx-auto">
    <div class="breadcrumbs mb-4">
      <ul>
        <li><%= link_to "Matches", matches_path %></li>
        <li>Match <%= @match.match_id %></li>
      </ul>
    </div>

    <div class="card bg-base-100 shadow-xl mb-6">
      <div class="card-body">
        <h1 class="card-title text-3xl">
          Match <%= @match.match_id %>
          <% if @match.exceeded_player_limit %>
            <span class="badge badge-error">Invalid - Exceeded Player Limit</span>
          <% end %>
        </h1>
        
        <% if @match.exceeded_player_limit %>
          <div class="alert alert-warning mt-4">
            <span>‚ö†Ô∏è This match exceeded the 20 player limit and is not counted in global statistics.</span>
          </div>
        <% end %>
        
        <div class="stats shadow bg-base-200">
          <div class="stat">
            <div class="stat-title">Started</div>
            <div class="stat-value text-sm"><%= @match.started_at.strftime("%d-%m-%Y %H:%M") %></div>
          </div>
          
          <div class="stat">
            <div class="stat-title">Duration</div>
            <div class="stat-value text-sm"><%= @match.duration ? "#{@match.duration / 60} min" : "In Progress" %></div>
          </div>
          
          <div class="stat">
            <div class="stat-title">Total Kills</div>
            <div class="stat-value"><%= @statistics.total_kills %></div>
          </div>
          
          <div class="stat">
            <div class="stat-title">Winner</div>
            <div class="stat-value text-primary">
              <%= @statistics.winner&.name || "No Winner" %>
            </div>
            <div class="stat-desc">
              <% if @statistics.winner && @statistics.winner_favorite_weapon %>
                Favorite weapon: <%= @statistics.winner_favorite_weapon %>
              <% else %>
                Based on most kills
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4">Player Rankings</h2>
        
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>Rank</th>
                <th>Player</th>
                <th>Kills</th>
                <th>Deaths</th>
                <th>Score</th>
                <th>K/D Ratio</th>
                <th>Awards</th>
              </tr>
            </thead>
            <tbody>
              <% @statistics.rankings.each_with_index do |player_stat, index| %>
                <tr class="<%= index == 0 ? 'bg-success/10' : '' %>">
                  <td>
                    <% if index == 0 %>
                      <span class="badge" style="background-color: #FFD700; color: #000;">1st</span>
                    <% elsif index == 1 %>
                      <span class="badge" style="background-color: #C0C0C0; color: #000;">2nd</span>
                    <% elsif index == 2 %>
                      <span class="badge" style="background-color: #CD7F32; color: #FFF;">3rd</span>
                    <% else %>
                      <%= index + 1 %>
                    <% end %>
                  </td>
                  <td class="font-semibold"><%= player_stat[:name] %></td>
                  <td><%= player_stat[:kills] %></td>
                  <td><%= player_stat[:deaths] %></td>
                  <td class="font-bold"><%= player_stat[:score] %></td>
                  <td>
                    <span class="badge <%= player_stat[:kd_ratio] >= 1 ? 'badge-success' : 'badge-error' %>">
                      <%= player_stat[:kd_ratio].round(2) %>
                    </span>
                  </td>
                  <td>
                    <% if player_stat[:awards].present? %>
                      <% player_stat[:awards].each do |award| %>
                        <span class="badge badge-accent">üèÜ <%= award %></span>
                      <% end %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <% if @statistics.rankings.empty? %>
          <div class="text-center py-8">
            <p class="text-gray-500">No players found in this match</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>